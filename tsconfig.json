{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": false,
        "inlineSourceMap": true,
        "noEmitHelpers": true,
        "jsx": "react"
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "emitRequireType": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "bin",
        "config",
        "server.js"
    ]
}